{
  "expo": {
    "name": "My Salah",
    "slug": "my-salahs",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "backgroundColor": "#F0FFF4",
    "newArchEnabled": true,
    
    "plugins": [
      "expo-av", 
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "My Salah needs your location to show accurate prayer times."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#F0FFF4",
          "mode": "production"
        }
      ],
      "expo-asset",
      [
        "expo-background-fetch",
        {
          "ios": {
            "minimumInterval": 15
          }
        }
      ]
    ],

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F0FFF4"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mysalahs.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "My Salah uses your location to calculate accurate prayer times based on your city.",
        "UIBackgroundModes": [
          "remote-notification",
          "fetch",
          "processing"
        ]
      }
    },

    "android": {
      "package": "com.mysalahs.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F0FFF4"
      },
      "backgroundColor": "#F0FFF4",
      "softwareKeyboardLayoutMode": "resize",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK"
      ],
      "notification": {
        "icon": "./assets/notification-icon.png",
        "color": "#F0FFF4"
      }
    },

    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}